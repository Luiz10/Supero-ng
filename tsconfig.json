{
  "compileOnSave": false,
  "compilerOptions": {
    "skipLibCheck": true,
     //...other options
     "paths": {
      "primeng/*": ["node_modules/primeng-lts/*"]
  },
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "paths": {
    "@angular/core/src/metadata/*": ["./node_modules/@angular/core"]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
